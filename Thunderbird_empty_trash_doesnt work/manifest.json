{
  "manifest_version": 2,
  "name": "Empty Trash and Compact",
  "version": "1.1",
  "description": "Toolbar button to empty Trash and compact folders in all accounts.",
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesDelete",
    "mailTabs",
    "folders"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Empty Trash and Compact"
  },
  "applications": {
    "gecko": {
      "id": "emptytrashcompact@example.com",
      "strict_min_version": "143.0"
    }
  }
}
